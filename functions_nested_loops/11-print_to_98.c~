#include "main.h"
#include <limits.h>

/**
 * print_to_98 - function
 *
 * Description: this program print all natural numbers from n to 98
 *
 * @n: this is the  parameter
 *
 * Return: Value n
 */

void print_to_98(int n)
{
	if (n <= 98)
	{
		for (; n <= 98; n++)
		{
			if (n == 98)
			{
				_putchar(n + '0');
				_putchar('\n');
				break;
			}
			else
			{
				_putchar(n + '0');
				_putchar(',');
				_putchar(' ');
			}
		}
	}
	else
	{
		for (; n >= 98; n--)
		{
			if (n == 98)
			{
				_putchar(n + '0');
				_putchar('\n');
				break;
			}
			else
			{
				_putchar(n + '0');
				_putchar(',');
				_putchar(' ');
			}
		}
	}
}
